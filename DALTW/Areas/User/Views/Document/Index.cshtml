@{
    ViewBag.Title = "Quản lý tài liệu";
}
<!-- Gọi file CSS -->
<link rel="stylesheet" href="@Url.Content("~/css/IndexManager.css")" />
<script src="https://cdn.jsdelivr.net/npm/docx-preview@1.9.0/dist/docx-preview.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>

@using (Html.BeginForm("Index", "DocumentManager", FormMethod.Get))
{
    <div class="row mb-3">
        <div class="col-md-4">
            <label><b>Topic:</b></label>
            @Html.DropDownList("topicId", ViewBag.Topics as SelectList, "Tất cả", new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            <label><b>Grade:</b></label>
            @Html.DropDownList("gradeId", ViewBag.Grades as SelectList, "Tất cả", new { @class = "form-control" })
        </div>

        <div class="col-md-4">
            <label><b>Category:</b></label>
            @Html.DropDownList("categoryId", ViewBag.Categories as SelectList, "Tất cả", new { @class = "form-control" })
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary"><i class="fas fa-filter"></i> Lọc</button>
    </div>

    <form asp-action="Index" method="get" class="mb-3 d-flex align-items-center gap-2">
        <!-- Ô tìm kiếm -->
        <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control w-25" placeholder="Tìm kiếm tài liệu..." />
        <!-- Nút tìm kiếm -->
        <button type="submit" class="btn btn-primary"> Tìm kiếm</button>
    </form>
}




<!-- 🔹 KHU VỰC HIỂN THỊ TÀI LIỆU -->
<div id="document-list">
    @await Html.PartialAsync("Search", (IEnumerable<DALTW.Models.Document>)Model)

</div>

<!-- ✅ SCRIPTS AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#search-form").submit(function (event) {
            event.preventDefault(); // Ngăn tải lại trang

            $.ajax({
                url: '@Url.Action("Index")',
                type: 'GET',
                data: $(this).serialize(),
                success: function (data) {
                    $("#document-list").html(data); // Cập nhật danh sách tài liệu
                },
                error: function () {
                    alert("Lỗi khi tìm kiếm, vui lòng thử lại!");
                }
            });
        });
    });
</script>


<div class="document-container">
    @foreach (var document in Model)
    {
        <a href="@Url.Action("ViewPDF", "Document", new { id = document.DocumentID })" class="document-card-link">
            <div class="col-md-12 mb-4">
                <div class="card" style="display: flex; flex-direction: row; padding: 10px;">

                    <!-- 🔹 Hiển thị trang đầu tiên của PDF -->
                    @if (!string.IsNullOrEmpty(document.FileURL) && document.FileURL.EndsWith(".pdf"))
                    {
                        <div class="pdf-preview" style="flex: 1; margin-right: 20px;">
                            <canvas id="canvas-@document.DocumentID" width="400" height="500"></canvas>
                        </div>
                    }

                    <!-- 🔹 Hiển thị thông tin tài liệu -->
                    <div class="document-info">
                        <h5>@document.Name</h5> <!-- Hiển thị tên tài liệu -->
                        <p><i class="fas fa-calendar"></i> @document.CreatedDate.ToString("dd/MM/yyyy")</p> <!-- Ngày tạo -->
                    </div>
                </div>
            </div>
        </a>

        <!-- ✅ Script để hiển thị trang đầu tiên của PDF -->
        @if (!string.IsNullOrEmpty(document.FileURL) && document.FileURL.EndsWith(".pdf"))
        {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var pdfUrl = '@Url.Content(document.FileURL)'; // Đường dẫn PDF
                    console.log("PDF URL:", pdfUrl); // Debug URL

                    // Kiểm tra URL hợp lệ trước khi tải PDF
                    fetch(pdfUrl, { method: 'HEAD' })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error("PDF không tồn tại hoặc lỗi tải file");
                            }
                            return pdfjsLib.getDocument(pdfUrl).promise;
                        })
                        .then(pdf => {
                            return pdf.getPage(1);
                        })
                        .then(page => {
                            var scale = 1; // Giữ nguyên tỷ lệ ảnh
                            var viewport = page.getViewport({ scale: scale });

                            var canvas = document.getElementById("canvas-@document.DocumentID");
                            var context = canvas.getContext('2d');
                            canvas.width = viewport.width;
                            canvas.height = viewport.height;

                            var renderContext = {
                                canvasContext: context,
                                viewport: viewport
                            };
                            return page.render(renderContext);
                        })
                        .catch(error => {
                            console.error("Lỗi khi tải PDF:", error);
                        });
                });
            </script>
        }
    }
</div>

<!-- ✅ Tải thư viện pdf.js trước khi sử dụng -->
