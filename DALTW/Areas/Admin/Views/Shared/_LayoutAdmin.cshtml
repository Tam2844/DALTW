@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white p-3" style="width: 220px; position: fixed; height: 100vh;">
        <h2 class="text-center mb-4">Admin Panel</h2>

        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/DocumentManager/Index">📄 Quản lý Tài liệu</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/Category/Index">📁 Quản lý Danh mục</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/Competition/Index">🏆 Quản lý Cuộc thi</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/Grade/Index">🎓 Quản lý Khối lớp</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/Semester/Index">📅 Quản lý Học kỳ</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="/Admin/Topic/Index">📚 Quản lý Chủ đề</a>
            </li>
            <li class="nav-item mt-4">
                <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Logout">🚪 Đăng xuất</a>
            </li>
            <li class="nav-item mt-2">
                <a class="btn btn-outline-light w-100" href="/">🏠 Về trang chính</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content" style="margin-left: 220px; padding: 20px;">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
