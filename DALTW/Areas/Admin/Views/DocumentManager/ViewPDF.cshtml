@model string
@{
    ViewData["Title"] = "Xem tài liệu PDF";
}

<h2>Xem tài liệu PDF</h2>
<form action="@Url.Action("Edit", "DocumentManager")" method="get" style="display:inline;">
    <button type="submit" class="btn btn-warning mt-3">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </button>
</form>

<iframe src="@Model" width="100%" height="800px"></iframe>


<a href="@Url.Action("Delete", "DocumentManager")" class="btn btn-secondary mt-3">Xóa</a>
<a href="@Url.Action("Index", "DocumentManager")" class="btn btn-secondary mt-3">Quay lại danh sách</a>

<a href="@Url.Action("Edit", "DocumentManager")" class="btn btn-warning mt-3">
    <i class="fas fa-edit"></i> Chỉnh sửa
</a>