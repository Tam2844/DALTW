<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EngShelf</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3 text-white" asp-area="" asp-controller="Home" asp-action="Index">EngShelf</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @await Component.InvokeAsync("MenuGrades")
                        @await Component.InvokeAsync("MenuTopics")
                        @await Component.InvokeAsync("MenuCompetitions")

                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="DocumentUser" asp-action="Index">Lọc</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto pt-2 pb-2">
        <div class="container text-center small">
            &copy; 2025 - EngShelf - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
            Lượt truy cập: <strong>@ViewBag.TotalVisits</strong>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>