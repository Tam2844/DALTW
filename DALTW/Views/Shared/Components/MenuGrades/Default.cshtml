<li class="nav-item dropdown mega-dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="gradesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Grades
    </a>

    <div class="dropdown-menu mega-menu p-4" aria-labelledby="gradesDropdown">
        <div class="d-flex flex-wrap" style="min-width: 600px;">
            @foreach (var grade in ViewBag.Grades as List<DALTW.Models.Grade>)
            {
                <div style="width: 22%; margin-right: 15px; margin-bottom: 20px;">
                    <div class="fw-bold text-danger">
                        <a asp-controller="DocumentUser"
                           asp-action="Index"
                           asp-route-gradeId="@grade.GradeID"
                           class="text-danger text-decoration-none">
                            @grade.Name
                        </a>

                    </div>

                    <ul class="list-unstyled ps-3">
                        <!-- Chỉnh sửa các link học kỳ để giữ gradeId -->
                        <a href="/DocumentUser?gradeId=@grade.GradeID&semesterId=1" class="text-dark">
                            Học kỳ 1
                        </a>
                        <br />
                        <a href="/DocumentUser?gradeId=@grade.GradeID&semesterId=2" class="text-dark">
                            Học kỳ 2
                        </a>

                    </ul>
                </div>
            }

        </div>
    </div>
</li>
