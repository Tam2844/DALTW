<li class="nav-item dropdown mega-dropdown">
    <a class="nav-link dropdown-toggle text-dark" href="#" id="competitionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Competitions
    </a>

    <div class="dropdown-menu mega-menu p-4" aria-labelledby="competitionsDropdown">
        <div class="d-flex flex-wrap" style="min-width: 500px;">
            @foreach (var comp in Model as List<DALTW.Models.Competition>)
            {
                <div style="width: 33%; margin-bottom: 10px;">
                    <a asp-controller="DocumentUser"
                       asp-action="Index"
                       asp-route-competitionId="@comp.CompetitionID"
                       class="d-block text-dark text-decoration-none fw-semibold">
                        @comp.Name
                    </a>
                </div>
            }
        </div>
    </div>
</li>
